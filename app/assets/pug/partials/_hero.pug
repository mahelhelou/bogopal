// Hero
section.hero
	.container
		.text-center
			h1.display-4.font-weight-light.my-4 Find Bogos in...
			form#searchForDeals(action="#" method="get")
				.d-flex.justify-content-center
					select.js-example-basic-single(name="type")
						- for (var i = 1; i < 5000; i++)
							- var city = 'City ' + i
							option(value=city)= city
						option(value="all_states1") Chicago
						option(value="1") New York
						option(value="2") Los Anglos
						option(value="3") Alaska
				.form-group
					input.form-control(type='search' name='dealsSearchInput', placeholder='Search in Bogopal...')

// hero-end
