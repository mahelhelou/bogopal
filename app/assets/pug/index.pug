extends ./layouts/default

//- Blocks
block pageTitle
	title Home | BogoPal

block content
	include ./mixins/_mixin-deals
	|
	|
	// Categories
	section.py-5.categories
		.container
			h2.section-title.mb-4 Browse Our Categories
			.row
				include ./mixins/_mixin-single-category
				+category({
					img: 'https://api.lorem.space/image/watch',
					title: 'Spa and Gym',
				})
				for i in [1, 2, 3, 4, 5, 6, 7]
					+category({
						img: 'https://api.lorem.space/image/watch',
						title: 'Restaurants',
					})

	// categories-end
	|
	|
	// Top deals
	+deals({
		title: 'Top Deals'
	})
	// top-deals-end
	|
	|
	// Trending
	+deals({
		title: 'Trending Deals'
	})
	// trending-end