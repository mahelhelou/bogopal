  section.deals.py-5
    .container
      h2.section-title.mb-4= dealsObj.title
      .row
        include ./_mixin-single-deal
        for i in [1, 2, 3, 4, 5, 6]
          +deal({
            category: 'Restaurants',
            img: 'https://api.lorem.space/image/watch',
            title: 'lorem ipsum dolor sit amet',
            description: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Illum, veritatis.',
            oldPrice: '100',
            newPrice: '50'
          })