// Modals
// Login modal
#modalLoginForm.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
	.modal-dialog(role='document')
		.modal-content.px-3.py-4
			.modal-body
				button.close(type='button' data-dismiss='modal' aria-label='Close')
					span(aria-hidden='false') &times;
				h2.font-weight-light.text-center.mb-4
					| Login
				#login-form
					.text-center
						h5.mb-1 We are glad to see you again!
						p.text-muted Don’t have an account? <a href="#" data-toggle="modal" data-target="#modalSignUpForm" data-dismiss="modal">Sign Up</a>
							| !
					form(method="POST" action="#")
						.row.mt-5.text-center
							.col-12.mb-3
								input.form-control-lg(type='text' placeholder='Email' name='email' required)
							.col-12.mb-4
								input.form-control-lg(type='password' placeholder='Password' name='password' required)
								.mt-3
									a(href="" id="modal-forgot-password-link" data-toggle="modal" data-target="#modalForgotPassword" data-dismiss="modal") Forgot Password?
								button.btn.btn-primary.px-5.py-2.mt-3(type="submit") Login
							|
							|
							// Social login
							.social-login.mt-4.text-center
								h5.text-muted.font-italic.mb-3
									| Or login with
									|
								.row
									.col-12.mb-3
										button.btn.btn-primary.px-5.py-2.fb-btn(type="button")
											i.fab.fa-facebook-f.mr-3
											| Facebook
									.col-12.mb-3
										button.btn.btn-primary.px-5.py-2.google-btn(type="button")
											i.fab.fa-google.mr-3
											| Google
									.col-12.mb-3
										button.btn.btn-primary.px-5.py-2.twitter-btn(type="button")
											i.fab.fa-twitter.mr-3
											| Twitter
